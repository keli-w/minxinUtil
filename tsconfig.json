{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationDir": "esm",
    "allowSyntheticDefaultImports": true,
    "typeRoots" : ["./typings"],
    "types": [],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
